%h1.page-header=@video.output_name


.container-fluid
  .row-fluid.pull-right
    .btn-toolbar{role: :toolbar}
      .btn-group
        =button_link('見る', url_for(controller: :videos, action: :play, id: @video.id), :glyph=>'film')
        =button_link('編集', url_for(controller: :videos, action: :edit, id: @video.id), :glyph=>'edit')
        =button_link('削除', url_for(controller: :videos, action: :destroy, id: @video.id), :glyph=>'remove-sign', :method=>:delete, :confirm=>true)

%h2.sub-header Logs
=render partial: 'parts/encode_log_list', locals: {:logs=>@logs}

%h2.sub-header Video Information
%table.table-bordered.table-striped
  %tr
    %th id
    %td=@video.id
  %tr
    %th event_id
    %td=@video.event_id
  %tr
    %th name
    %td=@video.name
  %tr
    %th output_name
    %td=@video.output_name
  %tr
    %th original_name
    %td=@video.original_name
  %tr
    %th episode_name
    %td=@video.episode_name
  %tr
    %th episode_number
    %td=@video.episode_number
  %tr
    %th saved_directory
    %td=@video.saved_directory
  %tr
    %th repaired_ts
    %td=@video.repaired_ts
  %tr
    %th filesize
    %td=number_to_human_size @video.filesize
  %tr
    %th is_encodable
    %td=@video.is_encodable
  %tr
    %th is_encoded
    %td=@video.is_encoded
  %tr
    %th program
    %td=simple_format @video.program
  %tr
    %th recording_error
    %td=simple_format @video.recording_error
